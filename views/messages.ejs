<html>
    <head>
        <script src="/socket.io/socket.io.js"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js" type="text/javascript"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
       
         <style>
             body {
                 margin-top: 30px;
                 background-color: lightblue;
                 }
             ul {
                 height: 80%;
                 list-style-type: none;
             }    
         </style>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div id="users" class="well">
                        <h3>All Chats</h3>
                        <ul class="list-group" id="users">
                                <% chats.forEach(function(item) { %>
                                        <li class="chat"><div id="name" class="well" style="background-color:white"><%= item.name %></div>
                                        <div style="display:none" id="email"><%= item.email %></div>
                                        </li>
                                <% }) %>
                        </ul>
                    </div>
                </div>

                <div id="chats" class="col-md-8">
                
                </div>
            </div>
        </div>
       <script >
       $(document).ready(function(){
            $('li').click(function(){
             var name = $(this).find('#name').text();
             var email = $(this).find('#email').text();
            $('#chats').html('<iframe src="/contact?receiverName='+name+'&receiverEmail='+email+'" style="width:100%; height:100%; overflow:hidden"></iframe>');
             
            });
       });
       </script>
    </body>
</html>